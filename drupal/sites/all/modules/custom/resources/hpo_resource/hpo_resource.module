class HpoTagController extends EntityAPIController {

    public function load($ids = array(), $conditions = array()) {
        $entities = parent::load($ids, $conditions);

        foreach($entities as &$entity) {
            // Load in the linked object
            $entity->hpo = hpo_load($entity->hpo_id);
        }
        return $entities;
    }
    public function save($entity, DatabaseTransaction $transaction = NULL) {
        parent::save($entity, $transaction);
        $entity->hpo = hpo_load($entity->hpo_id);
    }
}

function hpo_load($id, $reset = FALSE) {
    $hpo = hpo_load_multiple(array($id), $reset);
    return reset($hpo);
}
function hpo_load_multiple($ids = array(), $conditions = array(), $reset = FALSE) {
    $hpos = array_values(entity_load('hpo', $ids, $conditions, $reset));
    return $hpos;
}
function hpo_save($entity) {
    entity_save('hpo', $entity);
}
function hpo_delete($id) {
    entity_delete('hpo', $id);
}

function hpo_tag_load($id, $reset = FALSE) {
    return reset(hpo_tag_load_multiple(array($id), $reset));
}
function hpo_tag_load_multiple($ids = array(), $conditions = array(), $reset = FALSE) {
    $hpos = array_values(entity_load('hpo_tag', $ids, $conditions, $reset));
    return $hpos;
}
function hpo_tag_save($entity) {
    entity_save('hpo_tag', $entity);
}
function hpo_tag_delete($id) {
    entity_delete('hpo_tag', $id);
}

